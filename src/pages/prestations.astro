---
import '@/styles/prestations.css'
import RightArrow from '@/components/svg/RightArrow.astro'
import CustomButton from '@/components/utils/CustomButton.astro'
import View from '@/components/utils/View.astro'
import Layout from '@/layouts/Layout.astro'
import localPrestation1Image from '@/assets/images/presta1.webp'
import CheckedText from '@/components/utils/CheckedText.astro'
import ImageRowText from '@/components/utils/ImageRowText.astro'
import House from '@/components/svg/House.astro'

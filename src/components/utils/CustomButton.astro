---
import '../../styles/components/btn.css'

type ButtonProps = {
  text: string
  link: string | null
  className: string
}

const { text, link = '#', className } = Astro.props as ButtonProps
---

<a
  href={link}
  class={`btn ${className} flex items-center justify-center rounded-full border-none shadow-none py-3 px-6 h-auto w-fit whitespace-nowrap lg:text-lg md:text-lg md:py-3 md:px-7 lg:py-2.5 lg:px-7`}
>
  <p class="pl-2 font-light lg:text-[16px]">{text}</p>
  <slot />
</a>

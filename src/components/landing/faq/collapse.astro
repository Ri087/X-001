---
type CollapseProps = {
  question: string
  answer: string
}

const { question, answer } = Astro.props as CollapseProps
---

<div
  tabindex="0"
  class="collapse collapse-arrow bg-base-100 border-base-300 border"
>
  <div class="collapse-title font-semibold">{question}</div>
  <div class="collapse-content text-sm">
    {answer}
  </div>
</div>

---
import { AnimatedNumberComponent } from './AnimatedNumberComponent'
type StatCardProps = {
  title: string
  number: number
  unit: string | null
  subText: string
}

const { title, number, unit, subText } = Astro.props as StatCardProps
---

<div class="flex flex-col w-full max-w-[347px] bg-[#F4F4F4] px-10 rounded-xl">
  <div class="h-auto w-full flex items-end pt-6">
    <p class="text-3xl">{title}</p>
  </div>
  <div class="h-auto w-full flex items-center py-4">
    <AnimatedNumberComponent number={Number(number)} client:only="react" />
    <p class="text-4xl flex font-extrabold green-gradient">{unit}</p>
  </div>
  <div class="h-auto w-full flex items-start pb-4">
    <p class="text-md text-dark-primary-transparent text-[#0000006f]">
      {subText}
    </p>
  </div>
</div>

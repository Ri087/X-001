---
type StatCardProps = {
  title: string
  content: string
  subText: string
}

const { title, content, subText } = Astro.props as StatCardProps
---

<div class="flex flex-col w-full max-w-[347px] bg-[#F4F4F4] px-10 rounded-xl">
  <div class="h-auto w-full flex items-end pt-6">
    <p class="text-3xl">{title}</p>
  </div>
  <div class="h-ato w-full flex items-center py-4">
    <p class="text-4xl font-extrabold green-gradient">{content}</p>
  </div>
  <div class="h-auto w-full flex items-start pb-4">
    <p class="text-md text-dark-primary-transparent text-[#0000006f]">
      {subText}
    </p>
  </div>
</div>
